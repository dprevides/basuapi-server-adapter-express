{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "allowJs": true,
      "declaration": true,
      "removeComments": true,
      "resolveJsonModule": true,
      "typeRoots": [
        "./node_modules/@types"
      ],
      "sourceMap": true,
      "outDir": "dist",
      "strict": false,
      "lib": [
        "es2022","DOM"
      ],
      "baseUrl": ".",
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "moduleResolution": "Node",
      "skipLibCheck": true,
      "paths": {
        "@application/*": [
          "./src/application/*"
        ],
        "@domain/*": [
          "./src/domain/*"
        ],
        "@infra/*": [
          "./dist/infra/*"
        ],
        "@app/*": [
          "./app/dist/*"
        ]
      }
    },
    "include": [
      "src/**/*"
      , "test"    
    ],
    "exclude": ["node_modules","dist","bin"],
}
